@using Core.Entities;
@using WebUI.ViewsModels;
@using WebUI.Areas.Admin.ViewModels.Slider;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<SlideItem>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3>Slide Items</h3>
            <a class="btn btn-primary" asp-action="Created">Create Items</a>
            <h5></h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Photo
                            </th>
                            <th>
                                Offer
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/website-images/@item.Photo" alt="image" />
                                </td>
                                <td>
                                    @item.Offer
                                </td>
                                <td>
                                    <div class="row-cols-3">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



