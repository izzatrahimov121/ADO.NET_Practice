@using Core.Entities;
@using WebUI.ViewsModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<ShippingItem>
@*@model HomViewModel*@
@{
	ViewData["Title"] = "Index";
}
<div class="col-10">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h3>Shipping Items</h3>
				<a class="btn btn-primary" asp-action="Created">Create Items</a>
				<h5></h5>

				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>
									Icon
								</th>
								<th>
									Title
								</th>
								<th>
									Actions
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="py-1">
										<img src="~/assets/images/website-images//@item.Image" alt="image" />
									</td>
									<td>
										@item.Title
									</td>
									<td>
										<a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
										<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
										<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


