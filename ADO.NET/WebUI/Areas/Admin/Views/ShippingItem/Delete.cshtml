@using Core.Entities;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ShippingItem
@{
	ViewData["Title"] = "Delete";
}

<div class="col-6 mt-3">
	<h1>Delete</h1><br />
	<p></p>
	<p>Title:  <h3>@Model.Title</h3><br /></p>
	<p>Description: <h3>@Model.Description</h3><br /></p>
	<p>Image: <img src="~/assets/images/website-images//@Model.Image" height="60px" /><br /><br /></p>
	<div class="mt-3">
		<form method="post" class="formdelete">
			<a class="btn btn-danger deleteButton">Delete</a>
		</form>
	</div>
	<a class="btn btn-info" asp-action="Index">Back</a>
</div>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>

	$(function ($) {
		$('.deleteButton').on('click', function () {
			Swal.fire({
				title: 'Are you sure?',
				text: "You won't be able to revert this!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				confirmButtonText: 'Yes, delete it!'
			}).then((result) => {
				if (result.isConfirmed) {
					$(".formdelete").submit();
				}
			});
		});
	});
</script>